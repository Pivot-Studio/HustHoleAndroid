<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>



    <style name="Standard_Button">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="checkbox2" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:text">@string/login_password_3</item>
    </style>
    <style name="Custom" />
    <style name="Custom.TabRadioButton">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/GrayScale_100</item>
    </style>
    <style name="Custom.TabRadioButton_2">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/GrayScale_100</item>
    </style>
    <style name="contextMenuAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>
    <style name="darkScreenAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/darkscreen_enter</item>
        <item name="android:windowExitAnimation">@anim/darkscreen_exit</item>
    </style>
    <style name="Page2Anim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/context_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/context_menu_exit</item>
    </style>
    <style name="popupwindow_button_click">
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:textColor">@color/GrayScale_100</item>
    </style>
    <style name="popupwindow_button">
        <item name="android:background">@drawable/standard_button_gray</item>
        <item name="android:textColor">@color/GrayScale_20</item>
    </style>
    <style name="AlertDialogCustom" parent="android:style/Theme.Dialog">
        <item name="android:background">@drawable/homepage_notice</item>
    </style>
    <style name="myBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/HH_BandColor_3</item>
        <item name="colorPrimaryDark">@color/HH_BandColor_1</item>
        <item name="colorAccent">@color/GrayScale_100</item>
    </style>

    <style name="ImageTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>