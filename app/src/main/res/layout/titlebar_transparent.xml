<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="52dp"
android:orientation="horizontal"
    android:background="@color/Grayscale_200"
    android:id="@+id/cl_titbartransparent"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_titlebartransparent_back"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/iv_titlebartransparent_back"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/triangle_4" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_titlebartransparent_title"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:gravity="center"
        android:textColor="@color/GrayScale_100"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cl_titlebartransparent_back"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>