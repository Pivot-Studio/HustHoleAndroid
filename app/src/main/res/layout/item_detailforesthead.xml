<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF">


    <ImageView
        android:id="@+id/iv_detailforesthead_iconframe"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/standard_forest_centerphoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detailforesthead_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="测试测试测试测试"
        android:textColor="@color/GrayScale_100"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_detailforesthead_iconframe"
        app:layout_constraintStart_toEndOf="@+id/iv_detailforesthead_iconframe"
        app:layout_constraintTop_toTopOf="@+id/iv_detailforesthead_iconframe" />

    <TextView
        android:id="@+id/tv_detailforesthead_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="250 Huster . 250 树洞"
        android:textColor="@color/GrayScale_100"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/iv_detailforesthead_iconframe"
        app:layout_constraintTop_toBottomOf="@+id/iv_detailforesthead_iconframe" />

    <TextView
        android:id="@+id/tv_detailforesthead_content"
        android:layout_width="@dimen/dp_254"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="最多两行最多两行最多两行最多两行最多两行最多两行最多两行最多两行最多两行"
        android:textColor="@color/GrayScale_100"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/tv_detailforesthead_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_detailforesthead_number" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_detailforesthead"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@color/GrayScale_100"
        app:layout_constraintTop_toBottomOf="@+id/tv_detailforesthead_content"
        tools:layout_editor_absoluteX="22dp">

        <TextView
            android:id="@+id/tv_detailforesthead_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/page2_detailforest_1"
            android:textColor="@color/GrayScale_20"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_detailforesthead_greenline"
            android:layout_width="28dp"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/HH_BandColor_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_detailforesthead_new" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/GrayScale_80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_detailforesthead_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_detailforesthead_iconframe"
        app:layout_constraintEnd_toEndOf="@+id/iv_detailforesthead_iconframe"
        app:layout_constraintStart_toStartOf="@+id/iv_detailforesthead_iconframe"
        app:layout_constraintTop_toTopOf="@+id/iv_detailforesthead_iconframe"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_detailforesthead_join"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detailforesthead_title"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>