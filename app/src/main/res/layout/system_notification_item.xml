<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/GrayScale_100"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/system_notification_title"
        android:layout_width="331dp"
        android:layout_height="21dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="1037号森林有自己的树洞啦!"
        android:textColor="@color/GrayScale_20"
        android:textSize="14sp"></TextView>

    <TextView
        android:id="@+id/system_notification_content"
        android:layout_width="331dp"
        android:layout_height="36dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="森林大学怎能没有树洞？历时两个月的开发与测试，属于华科的1037树洞终于上线啦！快来这里找点乐子吧！"
        android:textColor="@color/GrayScale_50"
        android:textSize="12sp"></TextView>

    <TextView
        android:id="@+id/system_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="11-19"
        android:textColor="@color/GrayScale_80"
        android:textSize="11sp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GrayScale_95"></View>
</LinearLayout>