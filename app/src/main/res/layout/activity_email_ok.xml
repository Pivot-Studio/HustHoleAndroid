<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/email_ok_bar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/HH_BandColor_1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/email_ok_img"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:background="@drawable/back_green"
            android:clickable="true"
            android:scaleType="center"
            app:srcCompat="@drawable/back_black" />

        <TextView
            android:id="@+id/email_ok_title"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="校园邮箱"
            android:textColor="@color/GrayScale_100"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_verified"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/email_ok_bar"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/verified" />

    <TextView
        android:id="@+id/text_verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_verified"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="已验证校园邮箱" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_verified"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="1037树洞尊重您的隐私，校园邮箱仅被用于验证您的在校\n         学生身份，无法被用于查看您你的个人信息。" />

</RelativeLayout>