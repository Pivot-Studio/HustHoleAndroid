<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GrayScale_100">


    <TextView
        android:id="@+id/tv_welcome_title2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:text="@string/register_welcome_2"
        android:textColor="@color/GrayScale_50"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_welcome_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_title" />

    <Button
        android:id="@+id/btn_welcome_jumptologin"
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_56"
        android:background="@drawable/button"
        android:onClick="onClick"
        android:text="@string/register_welcome_3"
        android:textColor="@color/GrayScale_100"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <Button
        android:id="@+id/btn_welcome_jumptohomescreen"
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/standard_button_white"

        android:text="@string/register_welcome_4"
        android:onClick="onClick"
        android:textColor="@color/HH_BandColor_1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_welcome_jumptologin" />

    <TextView
        android:id="@+id/btn_welcome_greenline"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_10"
        android:layout_marginBottom="8dp"
        android:background="@drawable/block_line"
        app:layout_constraintBottom_toBottomOf="@+id/tv_welcome_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_welcome_title"
        app:layout_constraintStart_toStartOf="@+id/tv_welcome_title" />

    <TextView
        android:id="@+id/tv_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="1037树洞"
        android:textColor="@color/GrayScale_20"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/tv_welcome_title3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="欢迎你"
        android:textColor="@color/GrayScale_20"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_welcome_title"
        app:layout_constraintStart_toEndOf="@+id/tv_welcome_title" />
</androidx.constraintlayout.widget.ConstraintLayout>