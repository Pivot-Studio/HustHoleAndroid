<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/GrayScale_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btn_allforesthead_build"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/forest_button_white"
        android:text="申请新建"
        android:textColor="@color/HH_BandColor_3"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_allforesthead_content" />


    <TextView
        android:id="@+id/tv_allforesthead_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:text="@string/page2_allforests_2"
        android:textColor="@color/GrayScale_20"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_allforesthead_content"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:text="@string/page2_allforests_3"
            android:textColor="@color/GrayScale_50"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_allforesthead_title" />

    <ImageView
        android:id="@+id/iv_allforesthead_icon1"
        android:layout_width="116dp"
        android:layout_height="112dp"
        android:layout_marginTop="13dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/group324" />


    </androidx.constraintlayout.widget.ConstraintLayout>
