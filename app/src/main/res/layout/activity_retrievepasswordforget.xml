<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GrayScale_100">

    <include layout="@layout/titlebar_white" />
    <EditText
        android:id="@+id/et_forget_email"
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_56"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="41dp"
        android:background="@drawable/standard_corner"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="@string/retrieve_password_forget_2"
        android:importantForAutofill="no"
        android:inputType="none"
        android:maxLength="10"
        android:textCursorDrawable="@drawable/standard_cursor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forget_title" />


    <TextView
        android:id="@+id/tv_forget_suffix"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_20"
        android:text="@string/retrieve_password_forget_3"
        android:textColor="@color/GrayScale_20"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_forget_email"
        app:layout_constraintEnd_toEndOf="@+id/et_forget_email"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="@+id/et_forget_email"
        app:layout_constraintTop_toTopOf="@+id/et_forget_email"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_forget_warn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="8dp"
        android:text="@string/register_5"
        android:textColor="@color/HH_Reminder_Warning"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/btn_forget_jumptohomescreen"
        app:layout_constraintTop_toBottomOf="@+id/btn_forget_jumptohomescreen" />

    <TextView
        android:id="@+id/tv_forget_jumptocheckemail"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="30dp"
        android:text="@string/retrieve_password_forget_6"
        android:onClick="onClick"
        android:textColor="@color/HH_Reminder_Link"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/btn_forget_jumptohomescreen"
        app:layout_constraintTop_toBottomOf="@+id/btn_forget_jumptohomescreen" />

    <TextView
        android:id="@+id/tv_forget_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_26"
        android:text="@string/retrieve_password_forget_1"
        android:textColor="@color/GrayScale_0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1246" />

    <Button
        android:id="@+id/btn_forget_jumptohomescreen"
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="20dp"
        android:background="@drawable/standard_button_gray"
        android:text="@string/retrieve_password_forget_4"
        android:onClick="onClick"
        android:textColor="@color/GrayScale_100"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_forget_email" />

    <TextView
        android:id="@+id/tv_forget_notice"
        android:layout_width="@dimen/dp_311"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/retrieve_password_forget_7"
        android:textColor="@color/GrayScale_80"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_forget_jumptohomescreen"
        app:layout_constraintStart_toStartOf="@+id/btn_forget_jumptohomescreen"
        app:layout_constraintTop_toBottomOf="@+id/btn_forget_jumptohomescreen" />

</androidx.constraintlayout.widget.ConstraintLayout>