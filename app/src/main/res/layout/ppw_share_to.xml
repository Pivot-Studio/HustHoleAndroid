<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/GrayScale_0">
    <TextView
        android:id="@+id/tv_share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_to"
        android:textSize="@dimen/sp_16"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/GrayScale_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:id="@+id/wechat_friend"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/tv_share_title"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/wechat_friend_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/GrayScale_100"
            android:textSize="@dimen/sp_10"
            android:text="微信好友" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:id="@+id/store"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_share_title"
        app:layout_constraintStart_toEndOf="@id/wechat_friend">
        <ImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/store"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/GrayScale_100"
            android:textSize="@dimen/sp_10"
            android:text="@string/store" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>