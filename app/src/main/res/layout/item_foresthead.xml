<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/GrayScale_95"
    >

    <ImageView
        android:id="@+id/iv_foresthead_jumptoallforest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_foresthead_jumptoallforest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_foresthead_jumptoallforest"
        app:srcCompat="@mipmap/triangle_3" />

    <TextView
        android:id="@+id/tv_foresthead_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/page2fragment_1"
        android:textColor="@color/GrayScale_70"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_foresthead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_foresthead_jumptoallforest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="@string/page2fragment_2"
        android:textColor="@color/GrayScale_70"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_foresthead"
        app:layout_constraintEnd_toStartOf="@+id/iv_foresthead_jumptoallforest"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_foresthead"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="37dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>