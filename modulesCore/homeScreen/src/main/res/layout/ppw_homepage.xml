<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/HH_OnBackground">

    <Button
        android:id="@+id/btn_ppwhomepage_line"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/GrayScale_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ppwhomepage_latest_reply"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_24"
        android:background="@drawable/standard_button"
        android:text="@string/page1fragment_5"
        android:textColor="@color/white"
        android:textAppearance="@style/HustHoleTypography.Button3"
        android:layout_marginVertical="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ppwhomepage_latest_publish"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_24"
        android:background="@drawable/standard_button_g95"
        android:text="@string/page1fragment_6"
        android:textAppearance="@style/HustHoleTypography.Button3"
        android:layout_marginVertical="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_ppwhomepage_latest_reply"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
