<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/standard_button_gray"
        android:clickable="true"
        android:focusable="true"
        android:text="提交"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_group" />

    <TextView
        android:id="@+id/tv_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_15"
        android:text="🙂你在多大程度上愿意向他人推荐1037树洞？"
        android:textColor="@color/GrayScale_20"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:chipSpacingHorizontal="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_evaluate"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_1"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_1"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_2"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_2"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_3"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_3"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_4"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_4"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_5"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_5"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chip_6"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_6"
            android:textAlignment="center"
            app:checkedIconVisible="false"

            style="@style/myChipStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_7"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_7"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_8"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_8"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_9"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_9"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_10"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_65"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/chip_10"
            android:textAlignment="center"
            app:checkedIconVisible="false"
            style="@style/myChipStyle" />

    </com.google.android.material.chip.ChipGroup>
</androidx.constraintlayout.widget.ConstraintLayout>