<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popupwindow"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20">

        <ImageView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/ic_download"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/download"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/save_phone"
            android:textAppearance="@style/HustHoleTypography.Body3"
            app:layout_constraintEnd_toEndOf="@id/download"
            app:layout_constraintStart_toStartOf="@id/download"
            app:layout_constraintTop_toBottomOf="@id/download" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>