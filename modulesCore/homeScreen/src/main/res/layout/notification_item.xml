<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/GrayScale_100"
    android:orientation="vertical">
    <!--app:layout_srlBackgroundColor="transparent"-->
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/GrayScale_100">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_22"
            android:lineSpacingExtra="1sp"
            android:text="Alice"
            android:textColor="@color/GrayScale_20"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_toRightOf="@id/name"
            android:lineSpacingExtra="1sp"
            android:text="评论了你的树洞"
            android:textColor="@color/GrayScale_50"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/hole_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_19"
            android:lineSpacingExtra="1sp"
            android:text="# 1037"
            android:textColor="@color/GrayScale_20"
            android:textSize="13sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_17"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_5"
        android:lineSpacingExtra="1sp"
        android:text="19:20 2021 09-16"
        android:textColor="@color/GrayScale_80"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:lineSpacingExtra="1sp"
        android:maxLines="1"
        android:text="我好想买Airpods但是没有钱，梁老师可不可以资助呀呀呀"
        android:textColor="@color/GrayScale_20"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/GrayScale_95" />

</LinearLayout>