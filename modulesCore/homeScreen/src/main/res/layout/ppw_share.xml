<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popupwindow"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tv_ppw_share_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/分享"
        android:textColor="@color/GrayScale_0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/share_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_30"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/GrayScale_20"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_menu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/share_menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_54"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ppw_share_title">

        <LinearLayout
            android:id="@+id/share_card"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_share_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:text="分享卡片"
                android:textColor="@color/GrayScale_20"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>
