<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Background_GrayScale_100">

        <Button
            android:id="@+id/btn_join_in"
            android:layout_width="@dimen/dp_311"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_37"
            android:background="@drawable/standard_button_gray"
            android:enabled="false"
            android:text="@string/login_password_4"
            android:textColor="@color/Button_GrayScale_100"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_set_password" />

        <CheckBox
            android:id="@+id/ck_set_password_checkBox"
            style="@style/spCheckBox"
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/GrayScale_80"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toTopOf="@+id/btn_join_in"
            app:layout_constraintEnd_toEndOf="@+id/et_set_password"
            app:layout_constraintTop_toBottomOf="@+id/et_set_password" />

        <EditText
            android:id="@+id/et_set_password"
            android:layout_width="@dimen/dp_311"
            android:layout_height="@dimen/dp_56"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_41"
            android:background="@drawable/lr_et_corner"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="输入密码"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColorHint="@color/GrayScale_50"
            android:textCursorDrawable="@drawable/standard_cursor"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_set_password_title" />

        <TextView
            android:id="@+id/tv_set_password_warn"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/login_password_5"
            android:textColor="@color/HH_Reminder_Warning"
            android:textAppearance="@style/HustHoleTypography.Body3"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/btn_join_in"
            app:layout_constraintTop_toBottomOf="@+id/btn_join_in"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_set_password_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:text="@string/login_password_1"
            android:textAppearance="@style/HustHoleTypography.Headline1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1246" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
